# A sample Gemfile
source "https://rubygems.org"

gem "sinatra", require: "sinatra/base"
gem "slim"
gem "coffee-script"
gem "sass"
gem "bootstrap-sass"
gem "sprockets"
gem "sprockets-helpers"
gem "sprockets-sass"
gem "rubocop"

group :development do
  gem "sinatra-reloader", require: "sinatra/reloader"
  gem "guard-livereload", require: false
end
